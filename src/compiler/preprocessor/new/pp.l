    if (mHandle == NULL)
        return;

    YY_BUFFER_STATE buffer = static_cast<YY_BUFFER_STATE>(mInput.buffer);
    if (buffer != NULL)
    {
        yy_delete_buffer(buffer, mHandle);
        mInput.buffer = NULL;
